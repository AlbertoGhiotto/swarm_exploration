<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Spawn the world-->
  <include file="$(find node_counting_alg)/launch/world_init.launch">
    <arg name="world" value="empty" />
  </include>

  <!-- Set the velocities -->
  <param name="lin_vel" value=".8"/>
  <param name="ang_vel" value=".8"/>

  <!-- Launch the map interpolator -->
  <param name="num_robot" value="1"/>
  <node name="common_mapper" pkg="node_counting_alg" type="common_mapper_node"/>

  <!-- Spawn the robot -->
  <include file="$(find node_counting_alg)/launch/spawn_robot.launch">
    <arg name="ns" value="robot1"/>
    <arg name="X" value="0"/>
    <arg name="Y" value="0"/>
    <arg name="Z" value="0"/>
    <arg name="des_x" value="0"/>
    <arg name="des_y" value="0"/>
    <arg name="pkg" value="node_counting_alg"/>
    <arg name="xacro_file" value="urdf/robot_hol.xacro"/>
    <arg name="xacro_name" value="hol"/>
  </include>

</launch>
